PORT=5000
MONGODB_URI=mongodb://localhost:27017/scriptsense
ALLOWED_ORIGINS=http://localhost:5173

# Hugging Face Inference
# Set this to your HF API token (you'll update it locally)
HF_TOKEN=your_huggingface_token_here
# Optional: chatCompletion OCR model (vision-capable)
HF_MODEL=google/gemma-3-27b-it
# Optional: provider override for the selected model
HF_PROVIDER=featherless-ai
# Optional fallback OCR model when chatCompletion provider fails
HF_OCR_MODEL=microsoft/trocr-base-printed

# Legacy: Python OCR service (used only for PDF fallback)
PYTHON_SERVICE_URL=http://localhost:8000
MAX_FILE_SIZE=10485760
NODE_ENV=development